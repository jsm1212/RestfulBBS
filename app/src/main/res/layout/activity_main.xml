<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="ID"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_width="115dp"
            android:layout_height="75dp" android:id="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.234" app:layout_constraintVertical_bias="0.389"/>
    <TextView
            android:text="PWD"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_width="115dp"
            android:layout_height="75dp" android:id="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.234" app:layout_constraintVertical_bias="0.496"/>
    <EditText
            android:id="@+id/editId"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_width="250dp"
            android:layout_height="65dp"
            android:inputType="textPersonName"
            android:ems="10"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.747" app:layout_constraintVertical_bias="0.393"/>
    <EditText
            android:id="@+id/editPwd"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_width="250dp"
            android:layout_height="65dp"
            android:inputType="textPersonName"
            android:ems="10"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.747"/>
    <Button
            android:text="로그인"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_width="170dp"
            android:layout_height="110dp" android:id="@+id/loginBtn"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.676"/>
</androidx.constraintlayout.widget.ConstraintLayout>